<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="15dp"
    tools:context=".Admin.AdminViewComplainDetails"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="10dp"
        android:background="@android:color/white"
        android:elevation="20dp"
        android:gravity="center_vertical|center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingTop="8dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="8dp"
                android:textStyle="bold|italic"
                android:visibility="gone"
                android:fontFamily="monospace"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/red"
                android:text="Complaint Dtetails"/>

            <ImageView
                android:id="@+id/admin_view_com_det_img"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/admin_view_com_det_subject"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Subject"/>
            <TextView
                android:id="@+id/admin_view_com_det_date"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:textStyle="italic"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Date"/>
            <TextView
                android:id="@+id/admin_view_com_det_details"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Details  "/>

            <ImageView
                android:id="@+id/admin_view_com_det_map"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/locationicon"
                android:layout_gravity="right"
                android:gravity="right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/admin_view_com_det_new_tender"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#FFFFFF"
                    android:text="   Post Tender   "
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/admin_view_com_det_resolve"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#FFFFFF"
                    android:text="   Resolve   "
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>