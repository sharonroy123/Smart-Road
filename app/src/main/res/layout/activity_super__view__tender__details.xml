<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Supervisor.Super_View_Tender_Details"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold|italic"
        android:layout_gravity="right"
        android:fontFamily="serif-monospace"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:text="show tender location"/>
    <ImageView
        android:id="@+id/super_view_tend_det__map"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/locationicon"
        android:layout_gravity="right"
        android:gravity="right" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--app:cardCornerRadius="10dp"-->
            <!--android:background="@android:color/white"-->
            <!--android:elevation="20dp"-->
            <!--android:gravity="center_vertical|center_horizontal">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/super_view_tend_det_img"
                    android:layout_width="200dp"
                    android:background="@drawable/ic_menu_gallery"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="160dp" />

                <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="10dp"
                android:background="@color/l1"
                android:elevation="20dp"
                android:gravity="center_vertical|center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/super_view_tend_det_sub"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold|italic"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Subject"/>
                <TextView
                    android:id="@+id/super_view_tend_det_details"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/red"
                    android:textStyle="italic"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="details"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/super_view_tend_det_post_budget"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Budget"/>
                <TextView
                    android:id="@+id/super_view_tend_det_post_compdate"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold|italic"
                    android:layout_gravity="left"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Completion Date  "/>
                <TextView
                    android:id="@+id/super_view_tend_det_post_description"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/w"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:text="description  "/>

                    <Button
                        android:id="@+id/super_view_tend_det_btnbid"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="25dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="#FFFFFF"
                        android:text="   Bid Tender   "
                        android:textStyle="bold" />


            </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->
    </ScrollView>
</LinearLayout>