<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminViewBidDetails"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="10dp"
                android:background="@color/l1"
                android:elevation="20dp"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="left"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content"
                        android:text="Supervisor"/>

                    <TextView
                        android:id="@+id/admin_view_bid_det_sname"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:text="Sname"/>
                    <TextView
                        android:id="@+id/admin_view_bid_det_sphone"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="Sphone"/>
                    <TextView
                        android:id="@+id/admin_view_bid_det_semail"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:text="Semail  "/>
                    <!--<view-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:background="@color/red"-->
                        <!--android:layout_height="3dp"/>-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="left"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content"
                        android:text="Tender Details"/>


                    <TextView
                        android:id="@+id/admin_view_bid_det_sub"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:text="Subject"/>
                    <TextView
                        android:id="@+id/admin_view_bid_det_details"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="details"/>
                    <TextView
                        android:id="@+id/admin_view_bid_det_exppdate"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Comp Date  "/>
                    <TextView
                        android:id="@+id/admin_view_bid_det__budget"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="Budget"/>
                    <TextView
                        android:id="@+id/admin_view_bid_det__bidamount"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="BidAmount"/>
                    <TextView
                        android:id="@+id/admin_view_bid_det_biddetails"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="Budget"/>

            <Button
                android:id="@+id/admin_view_bid_det_btnallocate"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:text="   Allocate   "
                android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        <!--</android.support.v7.widget.CardView>-->
    </ScrollView>

</LinearLayout>