<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.UserAddComplaint"
    android:background="@drawable/roood">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/license_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:src="@android:drawable/picture_frame" />

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/license_selc_imgCam"
                    android:layout_width="46dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/cam1" />

                <ImageView
                    android:id="@+id/license_selc_imgGal"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/gallery" />

            </TableRow>

        </LinearLayout>

        <EditText
            android:id="@+id/add_complaint_subject"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:background="@drawable/custom_edittext"
            />
        <EditText
            android:id="@+id/add_complaint_details"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/custom_edittext"
            android:gravity="top|left"
            android:hint="Description..."
            android:lines="8"
            android:maxLines="10"
            android:minLines="4"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/add_complaint_btn_upload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:text="   Upload   "
            android:textStyle="bold" />




    </LinearLayout>
    </ScrollView>
</FrameLayout>